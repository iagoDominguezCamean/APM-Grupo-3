            android:src="@drawable/ic_explore" />

        -->

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentEnd="true"/>
