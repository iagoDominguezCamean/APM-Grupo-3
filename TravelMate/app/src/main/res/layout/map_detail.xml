<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen inicial -->
    <ImageView
        android:id="@+id/destination_image"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:src="@drawable/image1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,2:1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignTop="@id/destination_image"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Emoticono de la flecha -->
        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_arrow_back" />

        <!-- TÃ­tulo -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Buscar destinos..."
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Emoticono de la lupa -->
        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_search" />

    </RelativeLayout>

    <!-- Texto debajo de la imagen inicial -->
    <TextView
        android:id="@+id/destination1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="24dp"
        android:text="Roma, Italia"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/destination_image"
        app:layout_constraintStart_toStartOf="@id/destination_image" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="380dp"
        android:background="@drawable/image8"
        app:layout_constraintEnd_toEndOf="@id/destination_image"
        app:layout_constraintStart_toStartOf="@id/destination_image"
        app:layout_constraintTop_toBottomOf="@id/destination_image"
        map:cameraZoom="10"
        map:uiCompass="true"
        map:uiZoomControls="true"
        map:uiZoomGestures="true" />

    <View
        android:id="@+id/more_photos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintDimensionRatio="H,3:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/map_view"
        app:layout_constraintTop_toBottomOf="@id/map_view" />

    <TextView
        android:id="@+id/text_more_photos"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"

        android:text="More Photos"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/more_photos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/more_photos" />


    <ImageView
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"
        android:layout_margin="28dp"
        app:layout_constraintTop_toTopOf="@id/text_more_photos"
        app:layout_constraintStart_toStartOf="@id/more_photos"
        app:layout_constraintEnd_toStartOf="@id/image2"
        app:layout_constraintDimensionRatio="H,1:1" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_margin="28dp"
        android:src="@drawable/image1"
        app:layout_constraintTop_toTopOf="@id/text_more_photos"
        app:layout_constraintStart_toEndOf="@id/image1"
        app:layout_constraintEnd_toStartOf="@id/image3"
        app:layout_constraintDimensionRatio="H,1:1" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"
        android:layout_margin="28dp"
        app:layout_constraintTop_toTopOf="@id/text_more_photos"
        app:layout_constraintStart_toEndOf="@id/image2"
        app:layout_constraintEnd_toEndOf="@id/more_photos"
        app:layout_constraintDimensionRatio="H,1:1" />

    <!-- Segunda fila -->
    <ImageView
        android:id="@+id/image4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_margin="28dp"
        android:src="@drawable/image1"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="@id/more_photos"
        app:layout_constraintEnd_toStartOf="@id/image5"
        app:layout_constraintDimensionRatio="H,1:1" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_margin="28dp"
        android:src="@drawable/image1"
        app:layout_constraintTop_toBottomOf="@id/image2"
        app:layout_constraintStart_toEndOf="@id/image4"
        app:layout_constraintEnd_toStartOf="@id/image6"
        app:layout_constraintDimensionRatio="H,1:1" />

    <ImageView
        android:id="@+id/image6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"
        app:layout_constraintTop_toBottomOf="@id/image3"
        app:layout_constraintStart_toEndOf="@id/image5"
        app:layout_constraintEnd_toEndOf="@id/more_photos"
        app:layout_constraintDimensionRatio="H,1:1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#323232"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/menu_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_home_white" />

        <ImageButton
            android:id="@+id/menu_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_favourite" />

        <ImageButton
            android:id="@+id/menu_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_explore" />

        <ImageButton
            android:id="@+id/menu_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_user" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
