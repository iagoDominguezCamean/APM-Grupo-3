<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.muei.travelmate.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.muei.travelmate.ui.auth.AuthFragment"
        android:label="@string/title_auth"
        tools:layout="@layout/fragment_auth" />

    <fragment
        android:id="@+id/nav_fav"
        android:name="com.muei.travelmate.ui.home.FavFragment"
        android:label="@string/fav"
        tools:layout="@layout/fragment_fav" />

    <fragment
        android:id="@+id/nav_map"
        android:name="com.muei.travelmate.ui.home.MapFragment"
        android:label="@string/map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/nav_user"
        android:name="com.muei.travelmate.ui.home.UserFragment"
        android:label="@string/user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.muei.travelmate.ui.home.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_map_search"
        android:name="com.muei.travelmate.ui.home.MapSearchFragment"
        android:label="map_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_list_search"
        android:name="com.muei.travelmate.ui.home.ListSearchFragment"
        android:label="list_search"
        tools:layout="@layout/fragment_list_search" />

    <fragment
        android:id="@+id/nav_route"
        android:name="com.muei.travelmate.ui.home.RouteFragment"
        android:label="@string/route"
        tools:layout="@layout/fragment_route" />
</navigation>